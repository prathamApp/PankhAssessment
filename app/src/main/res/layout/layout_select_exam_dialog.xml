<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="6"
            android:fontFamily="@font/quicksand_bold"
            android:padding="5dp"
            android:text="Exam"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_close_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/colorAccentDark" />

    <LinearLayout
        android:id="@+id/ll_select_paper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/select_exam_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <!--<Spinner
            android:id="@+id/select_spinner_Subject"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

        <Spinner
            android:id="@+id/spinner_topic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />

    -->
        <LinearLayout
            android:id="@+id/bottomControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_update_tests"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"

                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Update Tests"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"

                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Ok"
                android:textColor="#ffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_start_assessment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_no_of_que"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_5sdp"

            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"
            android:text="Total No of question : "
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_out_of_marks"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"

            android:text="Out of Marks : "

            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time_allotted"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_bold"

            android:text="Time Alloted : "
            android:textSize="@dimen/_12sdp"

            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"

                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Back"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_start_Assessment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:background="@drawable/ripple_effect"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Start Assessment"
                android:textColor="#ffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
